extends ../layout/layout.pug
block content  
    .container
            h1 Update Product
            a(href='/')
                button(class="btn btn-primary") Home
            if errors
                each error in errors
                    .alert.alert-danger= error
            form(action="/product/updateproduct", method="POST")
                .form-group
                    label(for="name") Name
                    input#name.form-control(name="name" type="text", value=values ? values.name : '')

                .form-group
                    label(for="price") price
                    input#price.form-control(name="price" type="number", value=values ? values.price : '')
                //- .form-group
                //-     label(for="image") Image
                //-     input#image.form-control-file(name="image" type="file")
                button.btn.btn-primary Update