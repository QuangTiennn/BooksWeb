extends ../layout/layout.pug
block content
    html
        head
            title Books-Store
        body#bodyView
        .navbar#navbar
            nav.navbar.navbar-expand-lg.navbar-light
                img#logo(src="/img/0893.jpg_wh860.jpg")
                a#bookStore.navbar-brand(href='/') Books Store           
                #navbarTogglerDemo01.collapse.navbar-collapse
        .container
            h3 
                span= product.name
            .row 
                .col-sm-6.col-md-4.col-lg-3
                    .card.mb-3
                        b img 
                            img(style="width:253px;height:300px").card-img-top(src='/'+product.image)
                        br
                        b Price: &nbsp;
                            span= product.price
                        a.btn.btn-primary(href='/product/cart/add/' + product.id) add to cart
                        